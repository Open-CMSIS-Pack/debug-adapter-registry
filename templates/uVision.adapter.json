{
    "tasks": [{
        "label": "CMSIS Load+Run",
        "type": "shell",
        "command": "uVision runs on Windows only",
        "windows": {
            "command": "<%= uv4 %>",
            "options": {
                "cwd": "${workspaceFolder}/<%= solution_folder %>",
                "shell": {
                    "executable": "cmd.exe",
                    "args": [ "/d", "/c" ]
                }
            }
        },
        "args": [
            "${command:cmsis-csolution.getSolutionFile}"           
        ],
        "problemMatcher": []
    }]
}
