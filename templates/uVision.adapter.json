{
    "tasks": [{
        "label": "CMSIS Load+Run",
        "type": "shell",
        "command": "<%= uv4 %>",
        "options": { "cwd": "${workspaceFolder}/<%= solution_folder %>" },
        "windows": {
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [ "/d", "/c" ]
                }
            }
        },
        "linux": {
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [ "-c" ]
                }
            }
        },
        "osx": {
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [ "-c" ]
                }
            }
        },
        "args": [
            "<%= solution_path %>",
            "<% for (const arg of args) { %>",
            "<%= arg %>\n",
            "<% } %>"
        ],
        "problemMatcher": []
    }]
}
