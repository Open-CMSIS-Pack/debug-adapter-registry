{
    "data": {
        "cwd": "${workspaceFolder}/<%= solution_folder %>",
        "shell": {
            "win32": {
                "executable": "cmd.exe",
                "args": [ "/d", "/c" ]
            },
            "linux": {
                "executable": "/bin/bash",
                "args": [ "-c" ]
            },
            "darwin": {
                "executable": "/bin/bash",
                "args": [ "-c" ]
            }
        },
        "program": "<%= symbol_files[0]?.file ?? '' %>",
        "programs": "<%= Object.fromEntries(symbol_files.map(s => [s.pname ?? '', s.file ?? ''])) %>"
    },
    "launch": {
        "singlecore-launch": {
            "name": "STLink@pyOCD (launch)",
            "type": "gdbtarget",
            "request": "launch",
            "cwd": "<%= data.cwd %>",
            "program": "<%= data.program %>",
            "gdb": "arm-none-eabi-gdb",
            "auxiliaryGdb": true,
            "preLaunchTask": "CMSIS Load",
            "initCommands": [
                "<% const files = symbol_files.slice(1).map(s => s.file) %>",
                "<% for (const file of files) { %>",
                "symbol-file <%= file %>\n",
                "<% } %>",
                "monitor reset halt",
                "tbreak main"
            ],
            "customResetCommands": [
                "monitor reset halt",
                "tbreak main",
                "continue"
            ],
            "target": {
                "server": "pyocd",
                "serverParameters": [
                    "gdbserver",
                    "--probe", "stlink:",
                    "--connect", "attach",
                    "--cbuild-run", "${command:cmsis-csolution.getCbuildRunFile}",
                    "--quiet",
                    "--log", "*.cbuild_run,*server=info"
                ],
                "port": "<%= ports.get(pname) %>"
            },
            "cmsis": {
                "cbuildRunFile": "${command:cmsis-csolution.getCbuildRunFile}",
                "updateConfiguration": "auto"
            }
        },
        "singlecore-attach": {
            "name": "STLink@pyOCD (attach)",
            "type": "gdbtarget",
            "request": "attach",
            "cwd": "<%= data.cwd %>",
            "program": "<%= data.program %>",
            "gdb": "arm-none-eabi-gdb",
            "auxiliaryGdb": true,
            "initCommands": [
                "symbol-file <%= data.program %>}\n"
            ],
            "customResetCommands": [
                "monitor reset halt",
                "tbreak main",
                "continue"
            ],
            "target": {
                "port": "<%= ports.get(pname) %>"
            },
            "cmsis": {
                "cbuildRunFile": "${command:cmsis-csolution.getCbuildRunFile}",
                "updateConfiguration": "auto"
            }
        },
        "multicore-start-launch": {
            "name": "<%= pname %> STLink@pyOCD (launch)",
            "type": "gdbtarget",
            "request": "launch",
            "cwd": "<%= data.cwd %>",
            "program": "<%= data.programs[pname] %>",
            "gdb": "arm-none-eabi-gdb",
            "auxiliaryGdb": true,
            "preLaunchTask": "CMSIS Load",
            "initCommands": [
                "symbol-file <%= data.programs[pname] %>\n",
                "monitor reset halt",
                "tbreak main"
            ],
            "customResetCommands": [
                "monitor reset halt",
                "tbreak main",
                "continue"
            ],
            "target": {
                "server": "pyocd",
                "serverParameters": [
                    "gdbserver",
                    "--probe", "stlink:",
                    "--connect", "attach",
                    "--persist",
                    "--cbuild-run", "${command:cmsis-csolution.getCbuildRunFile}",
                    "--quiet",
                    "--log", "*.cbuild_run,*server=info"
                ],
                "port": "<%= ports.get(pname) %>"
            },
            "cmsis": {
                "cbuildRunFile": "${command:cmsis-csolution.getCbuildRunFile}",
                "updateConfiguration": "auto"
            }
        },
        "multicore-start-attach": {
            "name": "<%= pname %> STLink@pyOCD (attach)",
            "type": "gdbtarget",
            "request": "attach",
            "cwd": "<%= data.cwd %>",
            "program": "<%= data.programs[pname] %>",
            "gdb": "arm-none-eabi-gdb",
            "auxiliaryGdb": true,
            "initCommands": [
                "symbol-file <%= data.programs[pname] %>\n"
            ],
            "customResetCommands": [
                "monitor reset halt",
                "tbreak main",
                "continue"
            ],
            "target": {
                "port": "<%= ports.get(pname) %>"
            },
            "cmsis": {
                "cbuildRunFile": "${command:cmsis-csolution.getCbuildRunFile}",
                "updateConfiguration": "auto"
            }
        },
        "multicore-other": {
            "name": "<%= pname %> STLink@pyOCD (attach)",
            "type": "gdbtarget",
            "request": "attach",
            "cwd": "<%= data.cwd %>",
            "program": "<%= data.programs[pname] %>",
            "gdb": "arm-none-eabi-gdb",
            "auxiliaryGdb": true,
            "initCommands": [
                "symbol-file <%= data.programs[pname] %>\n"
            ],
            "customResetCommands": [
                "monitor reset halt",
                "tbreak main",
                "continue"
            ],
            "target": {
                "port": "<%= ports.get(pname) %>"
            },
            "cmsis": {
                "cbuildRunFile": "${command:cmsis-csolution.getCbuildRunFile}",
                "updateConfiguration": "auto"
            }
        }
    },
    "tasks": [
        {
            "label": "CMSIS Erase",
            "type": "shell",
            "command": "pyocd",
            "options": { 
                "cwd": "<%= data.cwd %>",
                "shell": "<%= data.shell[process.platform] %>"
            },
            "args": [
                "erase",
                "--probe", "stlink:",
                "--chip",
                "--cbuild-run", "${command:cmsis-csolution.getCbuildRunFile}"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load",
            "type": "shell",
            "command": "pyocd",
            "options": { 
                "cwd": "<%= data.cwd %>",
                "shell": "<%= data.shell[process.platform] %>"
            },
            "args": [
                "load",
                "--probe", "stlink:",
                "--cbuild-run", "${command:cmsis-csolution.getCbuildRunFile}"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Run",
            "type": "shell",
            "command": "pyocd",
            "options": { 
                "cwd": "<%= data.cwd %>",
                "shell": "<%= data.shell[process.platform] %>"
            },
            "args": [
                "gdbserver",
                "--probe", "stlink:",
                "--connect", "attach",
                "--persist",
                "--reset-run",
                "--cbuild-run", "${command:cmsis-csolution.getCbuildRunFile}",
                "--quiet",
                "--log", "*.cbuild_run,*server=info"
            ],
            "problemMatcher": []
        },
        {
            "label": "CMSIS Load+Run",
            "dependsOn": [
                "CMSIS Load",
                "CMSIS Run"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "CMSIS TargetInfo",
            "type": "shell",
            "command": "pyocd",
            "options": { 
                "cwd": "<%= data.cwd %>",
                "shell": "<%= data.shell[process.platform] %>"
            },
            "args": [
                "list",
                "--cbuild-run", "${command:cmsis-csolution.getCbuildRunFile}"
            ],
            "problemMatcher": []
        }
    ]
}
